#!/bin/zsh -eu

#
# Update all the things.
#

brew doctor
brew update
brew upgrade

for repo in $( find ~ -name ".git" -type d -prune ) ; do
  R=$( dirname $repo )
  echo
  echo $R
  echo
  cd $R

  # Ignore repositories that do not have a remote.
  REMOTE=$( git remote -v )
  if [[ "${REMOTE}" != "" ]] ; then
    git pull
  fi

  if [[ -f go.mod ]] ; then
    ~/bin/macos/golang-modup
    make test
  fi

  git status

  cd
  echo
done
